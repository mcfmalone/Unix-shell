#!/bin/bash

N="Get STB Info"
V="$Revision 5.0 $"

function Version
{
	echo -e "$Id: gsi,v 5.0 2018/11/26 22:28:09 P2749056 Exp P2749056 $"|sed 's/^[: ]*//'
} 

function ChangeLog
{
	[[ ${1} == "help" ]] && echo -e "\e[4mChange Log\e[0m\n\nUsage: cl" && continue
cat << ENDLOG | fmt -w $(tput cols)
Log
$Log: gsi,v $
